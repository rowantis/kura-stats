{
  "name": "kura-stats",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "stats-frontend",
    "packages/**/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
